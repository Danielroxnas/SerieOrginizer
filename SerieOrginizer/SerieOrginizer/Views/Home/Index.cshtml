<div style="margin-top:50px;" ng-app="startApp" ng-controller="startController">

    <div class="row" ng-repeat="serie in seriesArray" style="height:40px;width:100%;padding-left:10px; position:relative; border:1px solid black;margin-bottom:20px; line-height:40px; vertical-align:middle; border-radius:10px 0 10px 10px;">
        <div style="position:absolute;top:-8px;right:-8px; width:20px;height:20px;border:solid black 1px;z-index:100;border-radius:10px; background-color:blue;" ng-click="remove($index)"></div>
        <div class="col-lg-4" style="height:100%;"><span>{{$index}} {{serie.data.Title}}</span> </div>
        <div class="col-lg-4" style="height:100%;"><select ng-model="serie.season" ng-options="o as o for o in serie.sNumber" ng-change="change(serie.data.Title,serie.season)" /></div>
        <div class="col-lg-4" style="height:100%;"><select ng-options="o.Episode for o in serie.sNumber" ng-model="serie.Episode" /></div>
        <div class="col-lg-4" style="height:100%;">
            <select ng-model="serie.e" ng-options="o.Episode as o.Episode for o in serie.episodes" />
            <input type="button" ng-click="addEpisode(serie.data.Title,serie.e)" value="+" style="margin:0;height:20px;border-radius:15px;background-color:green;    line-height: 16px;" />
        </div>
    </div>
</div>

